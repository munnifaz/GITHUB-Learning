# EditorConfig is awesome: https://EditorConfig.org

root = true

# Default settings for all file types
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# CSS files
[*.css]
indent_style = space
indent_size = 2
max_line_length = 120
